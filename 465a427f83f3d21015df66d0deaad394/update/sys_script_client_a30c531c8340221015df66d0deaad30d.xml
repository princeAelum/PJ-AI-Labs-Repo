        <condition/>
        <description>This Onload script will hide all the sections in device request form.</description>
        <field/>
        <global>true</global>
        <isolate_script>true</isolate_script>
        <messages/>
        <name>Hide Sections on Device Request</name>
        <order/>
        <script><![CDATA[function onLoad() {
	try {
		if (g_form.getValue('device_name') == "") {
			g_form.setSectionDisplay("device_details", false);
			g_form.setSectionDisplay("delivery_details", false);
		}
	}
	catch (error) {
		Alert("The Error is: " + error.message);
	}
}]]></script>
